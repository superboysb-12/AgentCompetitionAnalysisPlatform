model:
  provider: openai
  api_key: "sk-zk27dc5e6f2447c59111f33391ffa21ff6368b7feced45a0"
  base_url: "https://api.zhizengzeng.com/v1/"
  model_name: "gpt-5"
  temperature: 0.2
  max_tokens: 8192
  request_timeout: 60
  use_responses_api: true
  reasoning:
    effort: medium
    summary: auto
  output_version: "responses/v1"

agent:
  system_prompt: |
    You are a bilingual (Chinese/English) ReAct agent that performs end-to-end
    competitor analysis for AI agent platforms. Always reason step by step,
    identify all relevant competitors, gather supporting evidence from Neo4j
    knowledge graphs and the open web, and conclude with prioritized
    recommendations.
  stream_reasoning: true
  max_iterations: 40
  min_tool_calls: 2

mcp_servers:
  - name: news_graph
    description: "新闻情报 Neo4j MCP，提供实时媒体知识图谱查询能力"
    transport: streamable_http
    url: "http://localhost:9000/mcp/"
    timeout: 60
    sse_read_timeout: 300
    headers: {}
  - name: product_graph
    description: "产品功能 Neo4j MCP，覆盖竞品功能元数据"
    transport: streamable_http
    url: "http://localhost:9001/mcp/"
    timeout: 60
    sse_read_timeout: 300
    headers: {}
  - name: text_graph
    description: "文本语料 Neo4j MCP"
    transport: streamable_http
    url: "http://localhost:9002/mcp/"
    timeout: 60
    sse_read_timeout: 300
    headers: {}
  - name: attachment_graph
    description: "附件/报告 Neo4j MCP"
    transport: streamable_http
    url: "http://localhost:9003/mcp/"
    timeout: 60
    sse_read_timeout: 300
    headers: {}

web_scraper:
  user_agent: "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/123.0.0.0 Safari/537.36"
  timeout: 15
  max_chars: 4000
